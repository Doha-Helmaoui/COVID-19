"use strict";!function(window){function init(tabber){createHeaderList(tabber),addListeners(tabber),expandCurrentTab(tabber)}function expandCurrentTab(tabber){setActiveTab(tabber,tabber.currentTabIndex)}function createHeaderList(tabber){tabber.allTabs.forEach(function(currentTab){var currentHeader=currentTab.querySelector(tabHeaderSelector),li=document.createElement("li");tabber.headerList.appendChild(li),li.classList.add("header_li"),tabber.tabInnerList.push(currentHeader),li.appendChild(currentHeader.cloneNode(!0)),tabber.tabHeaderList=tabber.headerList.querySelectorAll(".header_li")})}function removeActiveClass(tabber){_removeActiveClass(tabber.tabHeaderList),_removeActiveClass(tabber.tabInnerList),_removeActiveClass(tabber.allTabs)}function _removeActiveClass(nodeList){nodeList.forEach(function(node){node.classList.remove("active")})}function setActiveTab(tabber,index){tabber.tabHeaderList[index].classList.add("active"),tabber.tabInnerList[index].classList.add("active"),tabber.allTabs[index].classList.add("active")}function addListeners(tabber){_addListenersToAll(tabber,tabber.tabHeaderList),_addListenersToAll(tabber,tabber.tabInnerList),window.addEventListener("resize",function(){window.innerWidth>768&&expandCurrentTab(tabber)})}function _addListenersToAll(tabber,nodeList){nodeList.forEach(function(node,index){node.addEventListener("click",function(e){e.currentTarget.classList.contains("active")&&window.innerWidth<=768?removeActiveClass(tabber):(removeActiveClass(tabber),e.currentTarget.classList.add("active"),tabber.currentTabIndex=index,expandCurrentTab(tabber),(tabber.allTabs[index].getBoundingClientRect().top>=window.innerHeight-100||tabber.allTabs[index].getBoundingClientRect().top<=0)&&tabber.allTabs[index].scrollIntoView(!0))})})}if(document.body.classList.contains("sfPageEditor"))console.log("Editor Mode detected...");else{var tebberSelector=".sf-step-tabber",headerListSelector=".sf-step-tabber__ul-list",tabsSelector=".sf-step-tabber__single-tab-wrapper",tabHeaderSelector=".sf-step-tabber__tab-header-wrapper";document.querySelectorAll(tebberSelector).forEach(function(tabber){tabber.tabHeaderList=[],tabber.tabInnerList=[],tabber.currentTabIndex=0,tabber.allTabs=tabber.querySelectorAll(tabsSelector),tabber.headerList=tabber.querySelector(headerListSelector),tabber&&tabber.headerList&&tabber.allTabs.length>1&&init(tabber)})}}(window);